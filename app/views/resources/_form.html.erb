<%= form_for [@service_system, @resource] do |f| %>

  <% if @resource.errors.any? %>
    <div id="error-explanation">
      <h4><%= pluralize @resource.errors.count, "error" %> prevented this resource from being saved:</h4>
      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <table>
  
    <tr>
      <td><%= f.label :label %></td>
      <td><%= f.text_field :label, class: "span5" %></td>
    </tr>
  
    <tr>
      <td><%= f.label :resource_type %></td>
      <td><%= f.select :resource_type, @resource.subclasses.prepend(["--", "--"]) %></td>
    </tr>
  
    <tr>
      <td><%= f.label :value %></td>
      <td><%= f.text_field :value, class: "span5" %></td>
    </tr>
  
    <tr>
      <td><%= f.label :max_value %></td>
      <td><%= f.text_field :max_value, class: "span5" %></td>
    </tr>
  
    <tr>
      <td><%= f.label :min_value %></td>
      <td><%= f.text_field :min_value, class: "span5" %></td>
    </tr>
  
    <tr>
      <td><%= f.label :unit_of_measurement %></td>
      <td><%= f.text_field :unit_of_measurement, class: "span5" %></td>
    </tr>
  
    <tr>
      <td><%= f.label :comment %></td>
      <td><%= f.text_area :comment, class: "span5", rows: "3" %></td>
    </tr>
  
  </table>
  
  <div class="actions">
    <%= link_to "Back to list", service_system_resources_path, class: "btn btn-link" %>
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>

<% end %>
