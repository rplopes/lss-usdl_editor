<h3>Processes</h3>

<%= link_to "New Process", new_service_system_process_entity_path, class: "btn btn-success" %>

<% @process_entities.each do |process_entity| %>

<hr />
<h4><%= link_to process_entity.label, service_system_process_entity_path(@service_system.id, process_entity.id) %></h4>

<% if process_entity.comment.present? %>
<p>
  <%= process_entity.comment %>
</p>
<% end %>

<p>
  <%= link_to "Edit", edit_service_system_process_entity_path(@service_system.id, process_entity.id) %> |
  <%= link_to "Delete", service_system_process_entity_path(@service_system.id, process_entity.id), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
</p>

<% end %>
