<h3><%= @location.label %></h3>

<% if @location.broader_location %>
<p>
  <strong>Belongs to:</strong>
  <%= @location.broader_location %>
</p>
<% end %>
<% if @location.gn_feature.present?%>
<p>
  <strong>Is location from:</strong>
  <span class="gn-id"><%= @location.gn_feature %></span>
</p>
<% end %>
<% if @location.comment.present? %>
<p>
  <%= @location.comment %>
</p>
<% end %>

<p>
  <%= link_to 'Back to list', service_system_locations_path, class: "btn btn-link" %>
  <%= link_to "Delete", service_system_location_path(@service_system.id, @location.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this?" } %>
  <%= link_to 'Edit', edit_service_system_location_path(@service_system.id, @location.id), class: "btn btn-success" %>
</p>
