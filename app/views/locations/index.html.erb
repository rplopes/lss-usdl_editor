<h3>Locations</h3>

<%= link_to "New Location", new_service_system_location_path, class: "btn btn-success" %>

<% @locations.each do |location| %>

<hr />
<h4><%= link_to location.label, service_system_location_path(@service_system.id, location.id) %></h4>

<% if location.broader_location %><p>
  <strong>Belongs to:</strong>
  <%= location.broader_location %>
</p><% end %>

<p>
  <strong>Is location from:</strong>
  <%= location.gn_feature %>
</p>

<p>
  <strong>Comment:</strong><br />
  <%= location.comment %>
</p>

<p>
  <%= link_to "Edit", edit_service_system_location_path(@service_system.id, location.id) %> |
  <%= link_to "Delete", service_system_location_path(@service_system.id, location.id), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
</p>

<% end %>
