<%%= form_for @<%= singular_table_name %> do |f| %>

  <%% if @<%= singular_table_name %>.errors.any? %>
    <div id="error-explanation">
      <h4><%%= pluralize @<%= singular_table_name %>.errors.count, "error" %> prevented this <%= singular_table_name %> from being saved:</h4>
      <ul>
      <%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
        <li><%%= msg %></li>
      <%% end %>
      </ul>
    </div>
  <%% end %>
  
  <table>
  <% attributes.each do |attribute| %>
    <tr>
      <td><%%= f.label :<%= attribute.name %> %></td>
      <td><%%= f.<%= attribute.field_type %> :<%= attribute.name %> %></td>
    </tr>
  <% end %>
  </table>
  
  <div class="actions">
    <%%= link_to "Back to list", <%= index_helper %>_path, class: "btn btn-link" %>
    <%%= f.submit "Save", class: "btn btn-success" %>
  </div>

<%% end %>
