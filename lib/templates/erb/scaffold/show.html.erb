<h3><%= singular_table_name %></h3>

<table>
<% attributes.each do |attribute| %>
  <tr>
    <td><strong><%= attribute.human_name %></strong></td>
    <td><%%= @<%= singular_table_name %>.<%= attribute.name %> %></td>
  </tr>
<% end %>
</table>

<br />

<%%= link_to 'Back to list', <%= index_helper %>_path, class: "btn btn-link" %>
<%%= link_to 'Edit', edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: "btn btn-success" %>
